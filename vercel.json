{
  "version": 2,
  "framework": "nextjs",
  
  "functions": {
    "pages/api/*.js": {
      "maxDuration": 30
    },
    "pages/api/ask-ces.js": {
      "maxDuration": 60
    },
    "pages/api/creative-analysis.js": {
      "maxDuration": 120
    }
  },
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "X-System-ID",
          "value": "ai-analytics-platform"
        },
        {
          "key": "X-Platform-Version",
          "value": "2.0"
        }
      ]
    }
  ],
  
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://scout-mvp.vercel.app",
    "NEXT_PUBLIC_PLATFORM_NAME": "AI Analytics Platform",
    "NEXT_PUBLIC_VERSION": "2.0.0"
  },
  
  "regions": ["sin1", "syd1", "hkg1"],
  
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  }
}  "/favicon.ico",
