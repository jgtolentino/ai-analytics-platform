{
  "version": 2,
  "name": "ai-analytics-platform",
  "alias": ["scout-mvp.vercel.app"],
  "framework": "nextjs",
  
  "builds": [
    {
      "src": "apps/scout-dashboard/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  
  "routes": [
    {
      "src": "/ces/(.*)",
      "dest": "/ces/$1"
    },
    {
      "src": "/api/ask-ces",
      "dest": "/api/ask-ces"
    },
    {
      "src": "/api/creative-analysis",
      "dest": "/api/creative-analysis"
    },
    {
      "src": "/api/qa/caca",
      "dest": "/api/qa/caca"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/scout-dashboard/$1"
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/scout-analytics",
      "destination": "/api/scout-analytics"
    },
    {
      "source": "/api/retail-insights",
      "destination": "/api/retail-insights"
    },
    {
      "source": "/api/consumer-behavior",
      "destination": "/api/consumer-behavior"
    },
    {
      "source": "/api/brand-performance",
      "destination": "/api/brand-performance"
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "X-System-ID",
          "value": "ai-analytics-platform"
        },
        {
          "key": "X-Platform-Version",
          "value": "2.0"
        }
      ]
    }
  ],
  
  "functions": {
    "apps/scout-dashboard/pages/api/*.js": {
      "maxDuration": 30
    },
    "apps/scout-dashboard/pages/api/ask-ces.js": {
      "maxDuration": 60
    },
    "apps/scout-dashboard/pages/api/creative-analysis.js": {
      "maxDuration": 120
    }
  },
  
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://scout-mvp.vercel.app",
    "NEXT_PUBLIC_PLATFORM_NAME": "AI Analytics Platform",
    "NEXT_PUBLIC_VERSION": "2.0.0"
  },
  
  "regions": ["sin1", "syd1", "hkg1"],
  
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  
  "crons": [
    {
      "path": "/api/cron/refresh-data",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/run-qa-tests",
      "schedule": "0 */2 * * *"
    }
  ]
}