# AI Analytics Platform - Environment Variables

# Supabase Configuration (Required for Next.js)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Legacy Vite Support (if using Vite components)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role (Optional - for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Azure OpenAI Configuration (for AI Insights)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
VITE_APP_ENV=development

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_QA_VALIDATION=false
NEXT_PUBLIC_ENABLE_DYNAMIC_TRANSACTIONS=true
